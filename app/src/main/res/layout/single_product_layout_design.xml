<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:onClick="intentToProductDetails"

    >

    <androidx.cardview.widget.CardView
    android:layout_width="220dp"
    android:layout_height="300dp"
   android:id="@+id/cardImage"
    app:cardElevation="0dp"
        app:cardBackgroundColor="#00000000"
        android:paddingRight="20dp"
    >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@mipmap/product_base"
>
  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@mipmap/circle_up"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:src="@drawable/ic_baseline_add_shopping_cart_24"
      android:id="@+id/addCart"
      android:onClick="addToCart"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/circle_up"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_star_border_24"
        android:id="@+id/addWishList"
        android:onClick="addToWishList"
        android:layout_marginHorizontal="148dp"/>

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/model"
        />


</RelativeLayout>
</androidx.cardview.widget.CardView>


       <TextView
           android:id="@+id/productName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
         android:layout_below="@+id/cardImage"
           android:text="Item Name"
           android:layout_marginTop="10dp"
           android:textSize="20sp"
         android:gravity="center"
           android:layout_centerHorizontal="true"
               />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardImage"
            android:text="Price"
            android:layout_marginTop="60sp"
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            />

</RelativeLayout>